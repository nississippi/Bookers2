<h1>Users#show</h1>
<div>
  <h3><%= @user.name %></h3>
  <%= @user.introduction %>
  <%= image_tag @user.get_profile_image %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>

  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>