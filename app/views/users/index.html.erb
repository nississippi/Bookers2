<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body %><br />
    <%= f.submit'Create Book' %>
  <% end %>

<% @users.each do |user| %>
    <div>
      <%= image_tag user.get_profile_image %>
      <%= user.name %>
      <%= link_to "Show", user_path(user.id) %>
    </div>
  <% end %>