

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body %><br />
    <%= f.submit'Create Book' %>
  <% end %>

  <% @books.each do |book| %>
    <div>
      <%= image_tag book.get_image %>
      <%= link_to book.title, book_path(book.id) %>
      <%= book.body %>
    </div>
  <% end %>