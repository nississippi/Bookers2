<main>
  <div class="container px-5 px-sm-0">
    <div class="error-explanation">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @showbook.user.get_profile_image %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @showbook.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @showbook.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "UserEdit", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@showbook.user.id) do %>
                  <%= image_tag @showbook.get_image %>
                <% end %><br>
                <%= link_to @showbook.user.name, user_path(@showbook.user.id) %>
              </td>
              <td><%= link_to @showbook.title, book_path(@showbook.id) %></td>
              <td><%= @showbook.body %></td>
              <% if @showbook.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@showbook), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@showbook), method: :delete, class:"btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>


