<h1>Users info</h1>
<div>
  <%= image_tag @user.get_profile_image %>
  <%= @user.name %>
  <%= @user.introduction %>
  <%= link_to "UserEdit", edit_user_path %>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body %><br />
    <%= f.submit'Create Book' %>
  <% end %>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>

  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>