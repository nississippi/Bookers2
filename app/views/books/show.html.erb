<main>
  <div class="container px-5 px-sm-0">
    <%= render 'shared/list', book: @book, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@showbook.user.id) do %>
                  <%= image_tag @showbook.get_image %>
                <% end %><br>
                <%= link_to @showbook.user.name, user_path(@showbook.user.id) %>
              </td>
              <td><%= link_to @showbook.title, book_path(@showbook.id) %></td>
              <td><%= @showbook.body %></td>
              <% if @showbook.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@showbook), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@showbook), method: :delete, class:"btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>


